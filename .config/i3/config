# keybinds
set $mod Mod1

# define workspace shortcuts 
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# window titles font
font pango:jetbrains mono nerd font 8

# window styles
default_border pixel 2
gaps inner 6
gaps outer 0

# class			border	backgr.	text	indicator child_border
client.focused		#f5e0dc	#ffffff	#ffffff	#ffffff	  #ffffff
client.focused_inactive	#333333	#ffffff	#ffffff	#ffffff	  #333333
client.unfocused	#333333	#ffffff	#ffffff	#ffffff	  #333333

# initial executions for wm
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork
exec --no-startup-id feh --bg-scale ~/.config/background.png
exec --no-startup-id dex --autostart --environment i3
exec --no-startup-id ~/.config/polybar/launch.sh

# initial executions for applications
exec --no-startup-id alacritty
exec --no-startup-id discord 
exec --no-startup-id spotify-launcher
exec --no-startup-id zathura
exec --no-startup-id urvxt -e calcure
exec --no-startup-id logseq

# workshop 2: discord + spotify
assign [class="discord"] $ws2
assign [class="spotify"] $ws2

# workspace 3: alacritty + zathura
assign [class="alacritty"] $ws3
assign [class="zathura"] $ws3

# workspace 4: calcure + loqseq
assign [class="calcure"] $ws4
assign [class="logseq"] $ws4

# floating window key
floating_modifier $mod

# toggle floating
bindsym $mod+Shift+space floating toggle

# shortcuts
bindsym $mod+space exec "rofi -show run"
bindsym $mod+Shift+s exec --no-startup-id flameshot gui
bindsym $mod+period scratchpad show
bindsym $mod+comma move scratchpad
bindsym $mod+Return exec alacritty
bindsym $mod+Shift+q kill

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# disable focusing on hovered window
focus_follows_mouse no

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# split horizontically / vertically
bindsym $mod+i split h
bindsym $mod+v split v

# fullscreen focused window
bindsym $mod+f fullscreen toggle

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# focused window to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# reload / restart / kill i3
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"
